\mode<presentation>

%========================= User settings ==============================%
% Bullet symbols (math mode tokens). Override in the main .tex if needed.
\providecommand{\toninusitembullet}{$\blacktriangleright$}
\providecommand{\toninussubitembullet}{\toninusitembullet}
\providecommand{\toninussubsubitembullet}{\toninusitembullet}

% ToC subsection indent & bullet
\newlength{\toninus@tocsubindent}
\setlength{\toninus@tocsubindent}{5.65ex}
\providecommand{\toninus@tocbullet}{\toninusitembullet}

% Optional: footnote font size
% \setbeamerfont{footnote}{size=\scriptsize}

%=========================== List styles ==============================%
% Adapted from beamerinnerthemedfault.sty (geometric, compact bullets)
\setbeamertemplate{itemize item}%
  {\scriptsize\raise1.25pt\hbox{\donotcoloroutermaths\toninusitembullet}}
\setbeamertemplate{itemize subitem}%
  {\tiny\raise1.5pt\hbox{\donotcoloroutermaths\toninussubitembullet}}
\setbeamertemplate{itemize subsubitem}%
  {\tiny\raise1.5pt\hbox{\donotcoloroutermaths\toninussubsubitembullet}}

\setbeamertemplate{enumerate item}{\insertenumlabel.}
\setbeamertemplate{enumerate subitem}{\insertenumlabel.\insertsubenumlabel}
\setbeamertemplate{enumerate subsubitem}{\insertenumlabel.\insertsubenumlabel.\insertsubsubenumlabel}
\setbeamertemplate{enumerate mini template}{\insertenumlabel}

%============================ Footnotes ==============================%
% Clean layout: no extra indent, aligned mark
\setbeamertemplate{footnote}{%
  \parindent 0em\noindent
  \usebeamercolor{footnote}%
  \hbox to 0.8em{\hfil\insertfootnotemark}%
  \insertfootnotetext\par
}

%=============================== ToC =================================%
% Subsection entries with matching bullet and controlled indent
\setbeamertemplate{subsection in toc}{%
  \leavevmode\leftskip=\toninus@tocsubindent
  \llap{\raisebox{0.2ex}{\textcolor{structure}{\toninus@tocbullet}}\kern1ex}%
  \inserttocsubsection\par
}

\mode<all>
